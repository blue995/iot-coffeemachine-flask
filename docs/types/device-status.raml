type: object
properties:
  device_ready:
    required: true
    type: boolean
    description: Zeigt an, ob die Kaffeemaschine bereit ist einen Job anzunehmen.
    example: true
  water_tank_ready:
    required: true
    type: boolean
    description: Zeigt an, ob der Wassertank Wasser enthält oder vorhanden ist.
    example: true
  water_tank_fill_level_in_percent:
    required: false
    type: integer
    minimum: 1
    maximum: 100
    description: Zeigt den aktuellen Füllstand des Wassertanks in Prozent an.
    example: 66
  coffee_bean_container_ready:
    required: true
    type: boolean
    description: Zeigt an, ob Kaffeebohnen vorhanden sind.
    example: true
  coffee_bean_container_fill_level_in_percent:
    required: false
    type: integer
    minimum: 1
    maximum: 100
    description: Zeigt den aktuellen Füllstand des Kaffeebohnenbehälters in Prozent an.
    example: 66
  coffee_grounds_container_ready:
    required: true
    type: boolean
    description: Zeigt an, ob der Kaffeesatzbehälter genügend Platz für einen weiteren Job bietet oder vorhanden ist.
    example: true
  coffee_grounds_container_fill_level_in_percent:
    required: false
    type: integer
    minimum: 1
    maximum: 100
    description: Zeigt den aktuellen Füllstand des Kaffeesatzbehälters in Prozent an.
    example: 66
  coffee_machine_runtime_state:
    required: true
    type: integer
    description: |
      Zeigt den aktuellen Runtime Status der Kaffeemaschine.
      1 = Kaffeemaschine an.
      2 = Kaffeemaschine aus 
      3 = Kaffeemaschine befindet sich im Startup-Prozess.
      4 = Kaffeemaschine befindet sich im Shutdown-Prozess
    example: 2